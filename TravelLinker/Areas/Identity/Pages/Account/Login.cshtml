@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class=" mt-5 pt-5 rounded">
    <div class="row w-100">
        <div class="col-12 col-sm-8 col-md-6 mx-auto">
            <div class="card shadow ">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h3 class="m-auto fw-bold  fst-italic ">Login To Your Enterprise Account </h3>
                </div>

                <div class="card-body ">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-warning fw-bold" role="alert"></div>

                        <div class="form-group ">
                            <input asp-for="Input.Email" class="form-control my-4 py-3 fw-bold border border-dark border-2" placeholder="Your Enterprise Email">
                            <span asp-validation-for="Input.Email" class="fw-bold text-warning"></span>

                        </div>
                        <div class="form-group ">
                            <input asp-for="Input.Password" class="form-control my-4 py-3 fw-bold border border-dark border-2" placeholder="Password">
                            <span asp-validation-for="Input.Password" class="fw-bold text-warning"></span>

                        </div>
                        <div class="form-group fw-bold text-light">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </div>
                        <div class="text-center">
                            <button class="btn btn-outline-primary btn-dark btn-lg w-50 p-2 fw-bold">Login</button>
                            <a href="#" class="nav-link fw-bold p-3 align-self-end text-light">Forgot your password?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
