@model Trip 
@inject UserManager<ApplicationUser> UserManager
@{

}
<div class="card shadow  mt-2  container  p-0   rounded-5" style="height:550px;">
    <div class="card-header bg-dark rounded-top-5   text-light py-1 ">
        <div class="row">
            <div class="col-12 text-center">

                <a asp-controller="Company" asp-action="ViewFrind" asp-route-Id="@Model.CompanyId" class="link-underline link-underline-opacity-0 "> <h3 class="text-light text-uppercase fw-bold fs-4 fst-italic"><i class="bi bi-person-circle text-primary fw-bold fs-3"></i> View Woner </h3></a>                  <h4 class="text-light text-uppercase fw-bold fs-5 fst-italic">From  @Model.From</h4>
                <p class="text-light fw-semibold mb-0 fw-bold fs-5 fst-italic">To  @Model.To</p>

            </div>
        </div>
    </div>
    <div class="card-body bg-primary rounded-bottom-5">
        <div class="py-0">
            <div class="row">
                <div class="col-6 col-md-2 offset-lg-1 pb-1">
                    <a  asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary rounded-5 btn-dark text-white mb-5 fw-semibold btn-sm  ">
                        <small>Back </small>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-11 col-lg-3 offset-lg-1 text-center mb-3 mt-3">
                    <p class="d-inline-flex gap-1 ">
                        
                        <button class="btn btn-outline-secondary btn-dark text-white rounded-5" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                            Show Vehicle Features
                        </button>
                    </p>
                    <div class="collapse" id="collapseExample">
                        <div class="card card-body bg-dark text-white rounded-5">
                           <ul>
                                @foreach (var f in Model.VehicleSchedule.Vehicle.vehicleFeatures)
                                {
                                    <li>@f.FeatureName </li>
                                }
                           </ul>
                      
                        </div>
                    </div>
                    
                </div>
                <div class="col-12 col-lg-6 offset-lg-1 ">


                    <div class="container">

                        <table class="table table-dark mt-3 ">
                            <thead>
                                <tr class="bg-white">
                                    <th scope="col" class="text-light fw-bold "> Price </th>
                                    <th scope="col" class="text-light fw-bold text-center ">  From </th>
                                    <th scope="col" class="text-light fw-bold text-center"> To </th>
                                    <th scope="col" class="text-light fw-bold ">From </th>
                                    <th scope="col" class="text-light fw-bold ">To</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Fetch and display room data here -->
                                <tr>
                                    <td class="text-primary fs-5">@Model.Price.ToString("c")</td>
                                    <td class="text-primary fs-5">     <input   value="@Model.StartAt.ToLongDateString()"  type="text" disabled  class="form-control text-light fw-bold bg-primary w-100 " id="fromTime"></td>
                                    <td class="text-primary fs-5  ">      <input value="@Model.StartAt.AddHours(Model.Duration).ToLongDateString()"  type="text" disabled class="form-control text-light fw-bold bg-primary" id="toTime"></td>
                                    <td class="text-primary fs-5">@Model.From</td>
                                    <td class="text-primary fs-5">@Model.To</td>
                                    
                                </tr>

                                <!-- End of room data -->
                            </tbody>
                            </table>
                            <table class="table alert-dark  ">
                                <thead>
                                <tr class="bg-white mt-1">
                                    <th scope="col" class="text-light fw-bold "> Duration</th>
                                    <th scope="col" class="text-light fw-bold text-center ">Booking Deadline  </th>
                            </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="text-primary fs-5">@Model.Duration Hours </td>
                                    <td class="text-primary fs-5 "><input value="@Model.LastDate.ToLongDateString()"  disabled type="text" class="form-control text-center text-light fw-bold bg-primary w-75 offset-2" ></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="card shadow border-0 mt-2 container p-0">
                            <!-- Existing card content -->

                        </div>
                    </div>

                   
                </div>

            </div>
        </div>
    </div>
</div>
