@model IEnumerable<ShowVehicleSchedule>
<div class="container">
    <div class=" card  card-body site-blocks-table   m-3">
        <div class="card-header bg-primary text-white text-center py-3">
            <h3 class="fw-bold  fst-italic display-6 ">@Model.Count() Schedules For This Vehicle </h3>
        </div>
        <table class="table table-hover ">
            <thead>
                <tr>

                    <th class="text-primary fw-bold  fs-4" >Trip Code </th>
                    <th class="text-primary fw-bold fs-4 text-center offset-2">Work From </th>
                    <th class="text-primary fw-bold fs-4 text-center">Work To</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var Sc in Model)
                {
                    <tr>
                        <td class="text-primary fs-5 " style="width:80px;">     <input value="@Sc.TripCode" type="text" disabled class="form-control text-center text-primary fw-bold bg-light  "></td>
                        <td class="text-primary fs-5 " style="width:250px;">     <input value="@Sc.WorkFrom" type="text" disabled class="form-control text-center text-light fw-bold bg-primary w-100 "></td>
                        <td class="text-primary fs-5 " style="width:250px;">     <input value="@Sc.WorkTo" type="text" disabled class="form-control text-center text-light fw-bold bg-primary w-100 "></td>
                    </tr>
                }






            </tbody>

        </table>

        <div class="offset-1  ">
            <a asp-controller="Vehicle" asp-action="DisplayAll" class="btn btn-outline-primary  text-white  mb-2 fw-semibold btn-sm  fs-5 text-uppercase border border-primary fw-bold ">
                <small>Back</small>
            </a>
        </div>
    </div>


</div>