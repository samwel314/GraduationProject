<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link href="~/css/admin.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link href="~/css/profile.css" rel="stylesheet" />
	<link href="~/css/learn.css" rel="stylesheet" />
    <link href="~/css/Home.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary">
            <div class="container">
                <a class="navbar-brand text-white fw-bold fs-5 fst-italic btn btn-primary" asp-area="" asp-page="/Index"> <img src="~/Images/WhatsApp Image 2024-01-15 at 22.35.16_597eb9b1.jpg" width="40" height="40" class="rounded-circle border border-white border-2  " /> TravelLinker</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold fs-5 fst-italic btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity!.IsAuthenticated && User.Claims.FirstOrDefault(x => x.Type == StaticData.UserTypeClaim)?.Value == StaticData.HotelType)
                         {
                            <li class="nav-item">
                                <div class="dropdown">

                                    <a class="nav-link text-white fw-bold fs-5 fst-italic btn btn-primary dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">  Manage Service </a>

                                    <ul class="dropdown-menu bg-light">
                                        <li><a class="dropdown-item fw-bold" asp-controller="Hotel" asp-action="Index">Frindes View  </a></li>

                                        <li><a class="dropdown-item  fw-bold" asp-controller="Room" asp-action="Create">Create New Room</a></li>
                                        <li><a class="dropdown-item fw-bold" asp-controller="Hotel" asp-action="Show">Show Rooms </a></li>
                                        <li><a class="dropdown-item fw-bold" asp-controller="Hotel" asp-action="Frindes">My Frindes </a></li>
                                    </ul>
                                </div>

                            </li>
                        
                         }
                        else if (User.Identity!.IsAuthenticated && User.Claims.FirstOrDefault(x => x.Type == StaticData.UserTypeClaim)?.Value == StaticData.CompanyType)
                        {
                            <li class="nav-item">
                                <div class="dropdown">

                                    <a class="nav-link text-white fw-bold fs-5 fst-italic btn btn-primary dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">  Manage Service </a>


                                    <ul class="dropdown-menu bg-light">
                                        
                                        <li><a class="dropdown-item fw-bold" asp-controller="Company" asp-action="Index">Frindes View  </a></li>
                                        <li><a class="dropdown-item fw-bold" asp-controller="Vehicle" asp-action="UpCreate">Create New  Vehicle </a></li>
                                        <li><a class="dropdown-item  fw-bold" asp-controller="Vehicle" asp-action="DisplayAll">Show All Vehicles </a></li>
                                        <li><a class="dropdown-item  fw-bold" asp-controller="Trip" asp-action="UpCreate">Create New Trip</a></li>
                                        <li><a class="dropdown-item fw-bold" asp-controller="Company" asp-action="DisPlayAll">Show Trips  </a></li>

                                        <li><a class="dropdown-item fw-bold" asp-controller="Company" asp-action="Frindes">My Frindes </a></li>

                                    </ul>
                                </div>

                            </li>
                        }
                        else if (User.Identity!.IsAuthenticated && User.Claims.FirstOrDefault(x => x.Type == StaticData.UserTypeClaim)?.Value == StaticData.AdminType)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold fs-5 fst-italic btn btn-primary" asp-area="" asp-controller="Admin" asp-action="Dashbord">System  Dashbord</a>
                            </li>
                        }

                     </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>